{
  "name": "stl-viewer",
  "version": "1.0.0",
  "type": "module",
  "description": "Modelist-inspired 3D file organizer",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build && electron-builder",
    "build:mac": "npm run build -- --mac",
    "build:win": "npm run build -- --win",
    "build:linux": "npm run build -- --linux",
    "preview": "vite preview"
  },
  "keywords": [
    "electron",
    "stl",
    "3d",
    "viewer"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@react-three/drei": "^10.7.7",
    "@react-three/fiber": "^9.5.0",
    "@vitejs/plugin-react": "^5.1.3",
    "better-sqlite3": "^12.6.2",
    "chokidar": "^5.0.0",
    "date-fns": "^4.1.0",
    "fast-xml-parser": "^5.3.4",
    "fuse.js": "^7.1.0",
    "jszip": "^3.10.1",
    "lucide-react": "^0.563.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "sharp": "^0.34.5",
    "three": "^0.182.0",
    "three-stdlib": "^2.36.1",
    "vite": "^7.3.1",
    "zustand": "^5.0.11"
  },
  "devDependencies": {
    "electron": "^40.1.0",
    "electron-builder": "^26.7.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.2.0",
    "@types/react": "^19.2.11",
    "@types/react-dom": "^19.2.3",
    "@types/three": "^0.172.0",
    "autoprefixer": "^10.4.24",
    "electron-rebuild": "^3.2.9",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.3",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-electron-renderer": "^0.14.6"
  },
  "build": {
    "appId": "com.modelist.stlviewer",
    "productName": "Modelist",
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "target": "dmg",
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    },
    "linux": {
      "target": "AppImage"
    }
  }
}